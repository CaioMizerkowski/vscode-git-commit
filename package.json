{
    "name": "vscode-git-commit",
    "displayName": "VSCode Git Commit",
    "description": "Automatically generate git commit",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.42.0"
    },
    "publisher": "rioukkevin",
    "license": "MIT",
    "homepage": "https://kevin.riou.pro",
    "bugs": {
        "url": "https://github.com/rioukkevin/vscode-git-commit/issues"
    },
    "icon": "assets/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/rioukkevin/vscode-git-commit"
    },
    "keywords": [
        "git",
        "commit",
        "vscode",
        "emoji",
        "prefix"
    ],
    "categories": [
        "Other"
    ],
    "main": "./out/index.js",
    "activationEvents": [
		"onCommand:extension.setPrefix"
	],
    "contributes": {
        "configuration": {
            "title": "VSCode Git Commit",
            "properties": {
                "vscodeGitCommit.customAlias": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "Alias",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Alias name"
                            },
                            "description": {
                                "type": "string",
                                "description": "Description"
                            }
                        }
                    },
                    "default": [],
                    "markdownDescription": "Add prefix to extension (copy paste emoticons from here [Amp What](http://www.amp-what.com/unicode/search/icon))"
                },
                "vscodeGitCommit.predefinedPrefix": {
                    "type": "string",
                    "default": "Creator Prefix",
                    "enum": ["Creator Prefix", "Angular", "Semantic Commit Messages", "none"],
                    "enumDescriptions": [
                        "My own choice of prefix",
                        "Angular commits",
                        "Semantic commits",
                        "No prefix predefined"
                    ],
                    "markdownDescription": "Select predefined prefix (Live update) (Options: Creator Prefix / [Angular](https://github.com/angular/angular/blob/master/CONTRIBUTING.md) / [Semantic Commit Messages](https://gist.github.com/joshbuchea/6f47e86d2510bce28f8e7f42ae84c716) / none"
                }
            }
        },
		"commands": [
			{
				"command": "extension.setPrefix",
                "title": "Git prefix emote",
                "icon": {
                    "dark": "assets/icon_black.svg",
                    "light": "assets/icon_light.svg"
                }
			}
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "extension.setPrefix",
                    "group": "navigation",
                    "when": "scmProvider == git"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.setPrefix",
                "key": "ctrl+alt+enter",
                "mac": "shift+cmd+enter"
            }
        ]
	},
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts --fix",
        "watch": "tsc -watch -p ./",
        "build": "vsce package",
        "local-install":"code --install-extension vscode-git-commit-0.0.3.vsix",
        "pretest": "npm run compile && npm run lint"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
